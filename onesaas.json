{
  "$schema": "https://onesaas.kr/schema/onesaas.json",
  "schemaVersion": "1.0.0",
  "project": {
    "id": "",
    "name": "OneSaaS App",
    "slug": "onesaas-app",
    "createdAt": "",
    "generatedBy": "onesaas-starter"
  },
  "template": {
    "id": "onesass-starter",
    "version": "1.0.0",
    "source": "https://github.com/johunsang/onesass-starter"
  },
  "features": {
    "auth": {
      "enabled": true,
      "providers": ["email", "google", "kakao"]
    },
    "payment": {
      "enabled": true,
      "provider": "portone"
    },
    "admin": {
      "enabled": true
    },
    "legalPages": {
      "enabled": true,
      "pages": ["terms", "privacy"]
    },
    "ai": {
      "enabled": true,
      "providers": ["openai", "anthropic", "google"]
    }
  },
  "environment": {
    "database": {
      "provider": "supabase"
    },
    "hosting": {
      "provider": "vercel"
    }
  },
  "patchPolicy": {
    "managed": "auto-update",
    "custom": "never-overwrite",
    "bridge": "merge-conflict-resolve"
  },
  "neverOverwrite": [
    ".env",
    ".env.local",
    "README.md",
    "src/onesaas-custom/**/*"
  ]
}
